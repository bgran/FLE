	border-left:1px solid #FFF;
	border-right:1px solid #FFF;
	border-top:1px solid #FFF;
	background:#003366;
	padding-left:15px;
	padding-right:15px;
	padding-top:5px;
	padding-bottom:5px;
}

/* footer */
.footer {
	background: #<dtml-var color3 missing="808080">;
	color: #<dtml-var color1 missing="FFF">;
	font-size: x-small;
	font-weight: normal;
	text-align: right;
	padding: 0.2em 1em 0.5em 0;
	border-top: 2px solid #000;
}

